
extends layout



block content
	#memory
		if memory.video
			div.video= "video: " + memory.video
			video#day(autoplay=true)
				source(src="../memories/"+memory.video, type='video/mp4')
		else if memory.audio
			#colors
			audio(autoplay=true)
				source(src="../memories/"+memory.audio, type="audio/wav")

	a(href="/archive") 
		div#logo-shadow
			div#logo
				h1= "Past Perfect"

	if memory.video
		div#legend
			div.red="Affection"
			div.yellow="Anger"
			div.blue="Honesty"
			div.green="Joy"
			div.purple="Pride"
			div.orange="Regret"
			div.brown="Sorrow"

