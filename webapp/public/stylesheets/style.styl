body
  margin 0
  padding 0
  text-align left
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  font-size 15px
  color #606060
  //background #ACACAC url('../images/background.png')
  //background-repeat repeat-x

a
  color #606060
  text-decoration none


h1
  font-size 70px
  font-weight normal  
  color #FFF
  text-shadow 0 0 20px #FFF
  text-align center
  margin 0
  padding 50px

#mainContainer
  background -webkit-gradient(linear, 0% 0%, 0% 60%, from(#FFFFFF), to(#6F6767));

#container, #nav, #nav-shadow, #logo-shadow
  margin-left auto
  margin-right auto
  width 770px


#nav-shadow
	-webkit-box-shadow 0 0 30px 5px #999;

#nav
  background-image url('../images/Fractal_1.jpg')
  background-size 100% 100%
  height 250px
  padding-top 25px

#nav a 
	color #FFF 
	padding-right 20px
	text-decoration underline

#menu
  overflow auto
  width 100%
  margin-top 30px

.menubox
  height 70px
  float left
  width 160px
  padding 20px
  -webkit-box-shadow 0 0 30px 5px #999;

.emotion
  background white
  color black
  width 490px
  background -webkit-linear-gradient(#FFFFFF, #A3A3A3);


#consult
  background -webkit-linear-gradient(#A3A3A3, rgb(135, 135, 135));
  font-size 30px
  text-shadow 0 0 20px #FFF
  width 170px
  margin-right 30px

#consult a
  color white !important

#sort a, #footer a
	text-decoration underline

#footer
	margin-top 150p

#footer .memorybox
	background-color #456069

#footer a, #footer
	color #FFF

#memories
  text-align left

.memorybox
	background #FFF
	padding 15px
	margin 30px 0 0 0
	//border-radius 8px
	-webkit-box-shadow 0 0 30px 5px #999;

.memorybox .title
	font-size 24px

#memories .memorybox:hover 
	text-decoration underline !important

#logo-shadow
	//-webkit-box-shadow 0 0 30px 5px #999;
	width 200px
	position absolute
	top 0
	left 0

#logo
  //background-image url('../images/Fractal_1.jpg')
  //background-size 100% 100%

#logo h1
	font-size 30px
	padding 15px

#logo .memorybox
	margin 0
	padding 0

#colors
  background #FF0000

video 
  position absolute
  top 0
  left 0
  width 100% !important
  height auto

canvas 
  position absolute
  left 0
  top 80%
  width 100%
  height 20%
